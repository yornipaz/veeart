{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,               // json imports
    "esModuleInterop": true,                 // import common modules as ES6 Modules
    "allowSyntheticDefaultImports": true,

  }
}